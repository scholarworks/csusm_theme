<div id="featured-wrapper">
  <div id="featured" class="container">
    <div class="region region-featured">
      <section id="block-views-urgent-notices-block" class="block block-views clearfix">
        <div class="view view-urgent-notices view-id-urgent_notices view-display-id-block view-dom-id-ca1899d5b3df455c90e418458d1405a9">
          <div class="view-content">
            <div class="item-list">
              <ul class="list-unstyled">
                <li class="views-row views-row-1">
                  <span class="views-field views-field-title alert">
                    <span class="field-content">
                      <% flash_types_to_classes = { notice: 'alert-success', error: 'alert-danger', alert: 'alert-warning' } %>
                      <% [:notice, :error, :alert].each do |type| %>
                        <% if flash[type] %>
                          <div class="alert <%= flash_types_to_classes[type] rescue '' %> alert-dismissable" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <% if flash[type].respond_to? :join %>
                              <%= flash[type].join("<br/>").html_safe %>
                            <% else %>
                              <%= flash[type].html_safe %>
                            <% end %>
                          </div>
                          <% flash.delete(type) %>
                        <% end %>
                      <% end %>
                    </span>
                  </span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
<!-- End _flash_msg -->
